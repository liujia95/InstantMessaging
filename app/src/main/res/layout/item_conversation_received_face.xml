<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorConversationBg"
              android:orientation="vertical"
              android:padding="3dp">

    <include layout="@layout/include_system_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_conversation_your_face_iv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/em_default_avatar"
                />

            <me.liujia95.instantmessaging.view.GifView
                android:id="@+id/item_conversation_your_face_gifv_face"
                android:layout_width="80dp"
                android:layout_height="80dp">
            </me.liujia95.instantmessaging.view.GifView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>