<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorConversationBg"
              android:orientation="vertical"
              android:padding="3dp">

    <include layout="@layout/include_system_message"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <me.liujia95.instantmessaging.view.BubbleImageView
                android:id="@+id/item_conversation_my_image_iv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="120dp"
                android:maxWidth="240dp"
                android:minHeight="80dp"
                android:minWidth="40dp"
                android:scaleType="centerCrop"
                app:bubble_angle="4dp"
                app:bubble_arrowHeight="8dp"
                app:bubble_arrowLocation="right"
                app:bubble_arrowOffset="-4dp"
                app:bubble_arrowTop="18dp"
                app:bubble_arrowWidth="8dp"/>

            <ImageView
                android:id="@+id/item_conversation_my_image_iv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/em_default_avatar"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>