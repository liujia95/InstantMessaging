<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorConversationBg"
              android:orientation="vertical"
              android:padding="3dp">

    <include layout="@layout/include_system_message"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.azusasoft.suyan.view.GifView
                android:id="@+id/item_conversation_my_face_gifv_face"
                android:layout_width="80dp"
                android:layout_height="80dp">
            </com.azusasoft.suyan.view.GifView>

            <ImageView
                android:id="@+id/item_conversation_my_face_iv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/em_default_avatar"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>