<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@color/colorConversationBg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_conversation_my_txt_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/my_bubble_selector"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center_vertical"
            android:maxWidth="240dp"
            android:textColor="#DD000000"
            android:textSize="16sp"/>

        <ImageView
            android:src="@drawable/em_default_avatar"
            android:id="@+id/item_conversation_my_txt_iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#00f"/>
    </LinearLayout>

</RelativeLayout>