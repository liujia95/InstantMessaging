<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/face_emoji_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:padding="10dip"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/face_tusiji_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:padding="10dip"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/face_dots_container"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d5d3d5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/face_type_emoji"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/face_type_selector"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/icon_emoji"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d5d3d5"/>

        <ImageView

            android:id="@+id/face_type_tusiji"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/face_type_selector"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/icon_tusiji"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d5d3d5"/>
    </LinearLayout>

</LinearLayout>