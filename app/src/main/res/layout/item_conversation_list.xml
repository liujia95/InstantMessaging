<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:background="#fff"
              android:clickable="true"
              android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="76dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_conversation_iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="6dp"
            android:background="#00f"/>


        <ImageView
            android:id="@+id/item_conversation_red_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/red_point"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_conversation_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="订阅号"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_conversation_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="本周更新，我悄悄给每一个我喜欢的人类，在一些对话结尾，都做上了特别的标记"
            android:textColor="#999"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_conversation_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:text="15:50"
        android:textColor="#999"
        android:textSize="12sp"/>

</LinearLayout>